                  </a>
                </li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane fade in show active" id="login" role="tabpanel">
                  <div class="body mb-1">
                    <%= render "devise/shared/signin" %>
                  </div>
                </div>
                <div class="tab-pane fade" id="register" role="tabpanel">
                  <div class="body mb-1">
                    <%= render "devise/registrations/new" %>
                  </div>
                </div>
              </div>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </div>
